{
  "name": "clean-boilerplate",
  "version": "1.0.0",
  "description": "A clean architecture node.js boilerplate",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/index.js",
    "build": "rimraf build && cross-env NODE_ENV=production webpack -- --color",
    "start:dev": "cross-env NODE_ENV=development ts-node run.ts",
    "start:test": "cross-env NODE_ENV=production ts-node run.ts",
    "build:dev": "rimraf build && cross-env NODE_ENV=development webpack -- --color",
    "test": "cross-env NODE_ENV=production jest",
    "test:all": "snyk test && cross-env NODE_ENV=production jest",
    "pm2": "cross-env NODE_ENV=production pm2 start ecosystem.config.js --env production",
    "pm2:dev": "cross-env NODE_ENV=development pm2 start ecosystem.config.js --env development",
    "pm2:test": "cross-env NODE_ENV=production pm2 start ecosystem-testing.config.js --env production",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "docs": "rimraf docs && typedoc --options typedoc.json"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "boilerplate"
  ],
  "author": "Kasra Karami <Kasra.Karami.KK@gmail.com>",
